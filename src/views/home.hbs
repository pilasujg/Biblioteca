function truncate(str, n){
  return (str.length > n) ? str.substr(0, n-1) + '&hellip;' : str;
};


var trama = document.getElementById("trama1").innerHTML;
console.log(trama)

var trama1 = truncate(trama, 20);
document.getElementById("trama1").innerHTML = trama1;







</script>
