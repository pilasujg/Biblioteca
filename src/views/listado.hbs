<style>
  .table {
   margin: auto;
   width: 70% !important; 
}
</style>


<div class="container-fluid">
    <div class="row mt-4">
        <div class="col-sm-10">
            <h1 class="text-center">La lectura es para la mente lo que el ejercicio al cuerpo</h1>
        </div>
    </div>
    <div class="row mt-3 p-3">
        <div class="col-sm-10">
            <table class="table table-striped">
  <thead>
    <tr>
      
      <th scope="col">Título</th>
      <th scope="col">Autor</th>
      <th scope="col">Género</th>
    <th scope="col">Opinión</th>
    <th scope="col">Editar</th>
    <th scope="col">Eliminar</th>
    </tr>
  </thead>
  <tbody>
    {{#each books}}
    <tr>
     
      <td>{{titulo}}</td>
      <td>{{autor}}</td>
      <td class="text-capitalize">{{genero}}</td>
      <td>{{opinion}}</td>
       <td><a href="/books/edit/{{_id}}">Editar</a></td>
    <td><a href="/eliminar/{{doc.id}}">Eliminar</a></td>
    {{/each}}
    </tr>
  </tbody>
   
 </table>
           
        </div>
    </div>
</div>